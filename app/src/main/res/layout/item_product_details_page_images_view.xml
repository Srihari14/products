<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_2sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:textColor="@color/desc"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">


        <FrameLayout
            android:id="@+id/fl_product_preview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_150sdp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/btn_rect_grey_transparent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imv_main"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_1sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_instock"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@color/tag_green"
                    android:gravity="center"
                    android:text="InStock"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp" />

            </LinearLayout>

        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textColor="@color/dull_green"
        android:textSize="@dimen/_10sdp" />

</LinearLayout>